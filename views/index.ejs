                                  {hotel_name : ""+$('#hotel_'+i+' #hotel_name').val(),
                                  number_of_star : $('#hotel_'+i+' #nos').val(),
                                  stay_place : ""+$('#hotel_'+i+' #sp').val(),
                                  stay_duration: ""+$('#hotel_'+i+' #sd').val(),
                                  one_bed_price: ""+$('#hotel_'+i+' #op').val(),
                                  two_bed_person: ""+$('#hotel_'+i+' #tp').val()}

        );
