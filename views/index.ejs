<script>



$(document).ready(function(){
  event.preventDefault();
  // console.log(<%=posters%>);
  var pdf_file;

  $("#export").click(function() {
    html2canvas($("#poster"), {
    onrendered: function (canvas) {
        theCanvas = canvas;

        // document.body.appendChild(canvas);
        var dataURL = canvas.toDataURL();
        download(dataURL, 'my-node.png');
        canvas.toBlob(function (blob) {
            saveAs(blob, "Dashboard.png");
        });
    }
});
  });



  $("#delete_item").click(function(){
    $("#del").toggle();
  });

  $(function() {
          $( "#packages" ).sortable({
            items: '> #poster-item'
          });
          $( "#packages" ).disableSelection();
        });

  $(function() {
          $( "#serv" ).sortable({
            items: '> #serv-items'
          });
          $( "#serv" ).disableSelection();
        });



    var existHotel = 0;

    $("#add_hotel_btn").click(function(){
        existHotel+=1;
        $(".hotel-lists").append('<div class="bg-success custom-hotel" id="hotel_' + existHotel + '"><label>Hotel Name</label><input required type="text" id="hotel_name" class="form-control" placeholder="Add new hotel">'+
        '<hr><div class="form-group"><label>number of stars</label><br><input required type="number" default="5" class="form-control" id="nos" placeholder="Add Name"></div>'
        +'<hr><div class="form-group"><label>stay duration</label><br><input required type="text" class="form-control" id="sd" placeholder="stay_duration..."></div>'
        +'<hr><div class="form-group"><label>stay place</label><br><input required type="text" class="form-control" id="sp" placeholder="stay_place..."></div>'
        +'<hr><div class="form-group"><label>2 bed price</label><br><input required type="text" class="form-control" id="tp" placeholder="price..."></div>'
        +'<hr><div class="form-group"><label>1 bed price</label><br><input required type="text" class="form-control" id="op" placeholder="price..."></div></div>')
    });



    var seed = "<%=poster_id%>";
    $("#poster_id_id").val(seed);
    console.log(seed);


    $("#form-option").attr('action', '/items/add/'+seed);


    $( "#form-tour" ).submit(function( event ) {
      event.preventDefault();
      console.log("hi");
      var new_list =
      '<div class="col-md-2 col-sm-1"><h4 class="">'+$('#s_d').val()+'/'+$('#m_d').val()+'</h4></div>'
      +'<div class="col-md-1 col-sm-1"><h4 class="">'+$('#phase').val()+'</h4></div>';

      var packages = {
        package_seed : seed,
        phase : $('#phase').val(),
        date : $('#s_d').val()+'/'+$('#m_d').val(),
        number_of_hotel : existHotel,
        hotels: [],
        items: []
      }
      console.log(packages);
      // alert(existHotel);
      for(var i=1;i<=existHotel;i++){
        packages.hotels.push(
                                  {hotel_name : ""+$('#hotel_'+i+' #hotel_name').val(),
                                  number_of_star : $('#hotel_'+i+' #nos').val(),
                                  stay_place : ""+$('#hotel_'+i+' #sp').val(),
                                  stay_duration: ""+$('#hotel_'+i+' #sd').val(),
                                  one_bed_price: ""+$('#hotel_'+i+' #op').val(),
                                  two_bed_person: ""+$('#hotel_'+i+' #tp').val()}

        );
        }

        $('#form-tour').trigger("reset");

        $.post("/posters/add",{_package: packages});

      });


          $( "#poster-items" ).hide();




          $("#del").droppable({
            over:function(event, ui) {
                $("#del").css({"transition": "0.9s", "background-color": "#fff" , "border": "2px dashed #000" , "opacity": "0.6"});
            },
            drop: function(event, ui) {
                ui.draggable.remove();
                $("#del").toggle();
                setTimeout(function(){
                  alert("to undo refresh page(press F5)")
              }, 1000);

            }

        });



    $("#delete_hotel_btn").click(function(){

      if (existHotel===0) {
        alert("can not remove hotel :)");
      }
      else{
        $("#hotel_"+existHotel).remove();
        existHotel-=1;
      }

    });
});


</script>
