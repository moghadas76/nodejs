                $("#del").css({"transition": "0.9s", "background-color": "#fff" , "border": "2px dashed #000" , "opacity": "0.6"});
            },
            drop: function(event, ui) {
                ui.draggable.remove();
                $("#del").toggle();
                setTimeout(function(){
